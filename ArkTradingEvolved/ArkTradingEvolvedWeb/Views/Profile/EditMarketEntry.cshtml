@model ArkTradingEvolvedWeb.Models.UserMarketEntryViewModel



<div>
	<h4>Edit Market Entry</h4>
	<hr />
	<dl class="dl-horizontal">

		<dt>
			Creature
		</dt>
		<dd>
			@Html.DisplayFor(model => model.CollectionEntry.CreatureID)
		</dd>
		<dt>
			Creature Level
		</dt>
		<dd>
			@Html.DisplayFor(model => model.CollectionEntry.Level)
		</dd>
		<dt>
			Creature Name
		</dt>
		<dd>
			@Html.DisplayFor(model => model.CollectionEntry.Name)
		</dd>

	</dl>
		<hr />

		
			@using (Html.BeginForm())
			{
				<dl class="dl-horizontal">


					@Html.AntiForgeryToken()
					@Html.HiddenFor(model => model.MarketEntryID)
					<dt>
						Resource
					</dt>
					<dd>
						@Html.DropDownListFor(model => model.Resource.ResourceID,//
							new SelectList(Model.Resources, "ResourceID", "ResourceID"),
							new { @class = "form-control" })
					</dd>
					<dt>
						Price
					</dt>
					<dd>
						@Html.EditorFor(model => model.Units, new { htmlAttributes = new { @class = "form-control" } })
						@Html.ValidationMessageFor(model => model.Units, "", new { @class = "text-danger" })
					</dd>
					
				</dl>
				<div class="form-actions no-color">
					<input type="submit" value="Edit" class="btn btn-default" /> 
					@Html.ActionLink("Back to Profile", "Index", "Profile", null, new { @class="btn btn-default" })
				</div>
			}

		
		
		

	


</div>



