@model ArkTradingEvolvedWeb.Models.MarketViewModel

<h2>Market Entries</h2>
<table class="table">
	<tr>
		<th>
			Creature
		</th>
		<th>
			Level
		</th>
		<th>
			Name
		</th>
		<th>
			Gamertag
		</th>
		<th>
			Resource
		</th>
		<th>
			Price
		</th>
		
		<th></th>
	</tr>

	@foreach (var item in Model.MarketEntries)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.CollectionEntry.CreatureID)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.CollectionEntry.Level)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.CollectionEntry.Name)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.User.Gamertag)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.MarketEntry.ResourceID)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.MarketEntry.ResourceAmount)
			</td>
			<td>
				@if (ViewBag.UserID != item.User.UserID)
				{
					@Html.ActionLink("Purchase", "Purchase", new { id = item.MarketEntry.MarketEntryID }, new { @class = "btn btn-default" })
				}
			</td>
		</tr>
	}

</table>
